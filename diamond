import java.util.Scanner;

public class diamond {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        int n1 = (n+1)%2;
        int i = 1;
        while (i <= n)
        {
            int j = 1;
            int temp = i;
            while (j <= n)
            {
                System.out.print(n1-temp);
                j++;
            }
            System.out.println();
            i++;
        }
    }
}
